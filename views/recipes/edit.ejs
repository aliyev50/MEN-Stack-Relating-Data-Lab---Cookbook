<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Recipe</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Edit Recipe</h1>
  <form action="/users/<%= user._id %>/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <label for="name">Recipe Name:</label>
    <input type="text" id="name" name="name" value="<%= recipe.name %>" required>
    
    <label for="instructions">Instructions:</label>
    <textarea id="instructions" name="instructions" required><%= recipe.instructions %></textarea>

    <label for="ingredients">Ingredients:</label>
    <select id="ingredients" name="ingredients" multiple>
      <% ingredients.forEach(ingredient => { %>
        <option value="<%= ingredient._id %>" <%= recipe.ingredients.includes(ingredient._id) ? 'selected' : '' %>><%= ingredient.name %></option>
      <% }) %>
    </select>

    <button type="submit">Update Recipe</button>
  </form>
</body>
</html>
