<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Recipes</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>My Recipes</h1>
  <a href="/users/<%= user._id %>/recipes/new">Add New Recipe</a>
  <ul>
    <% recipes.forEach(recipe => { %>
      <li>
        <%= recipe.name %> - <%= recipe.instructions %>
        <form action="/users/<%= user._id %>/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
        <a href="/users/<%= user._id %>/recipes/<%= recipe._id %>/edit">Edit</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>
